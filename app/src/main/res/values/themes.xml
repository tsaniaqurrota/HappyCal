<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UAS_HappyCal" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="fontFamily">@font/intermed</item>
        <item name="background">@color/white</item>
    </style>

    <style name="SpinnerCustom" parent="Widget.AppCompat.Spinner">
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:background">@drawable/bg_list</item>
    </style>

    <style name="EditTextSearch" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:background">@drawable/bg_search</item>
    </style>

    <style name="Theme.UAS_HappyCal" parent="Base.Theme.UAS_HappyCal" />
</resources>